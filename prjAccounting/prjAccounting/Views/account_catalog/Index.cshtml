@model IEnumerable<prjAccounting.account_catalog>

@{
    ViewBag.Title = "Indice";
}
<script src="~/Content/jquery/jquery.min.js" type="text/javascript"></script>
<link rel="stylesheet" type="text/css" href="~/Content/datatables/dataTables.bootstrap4.min.css" />
<script type="text/javascript" src="~/Content/datatables/dataTables.bootstrap4.min.js"></script>
<h2>Indice</h2>

<p>
    @Html.ActionLink("Crear", "Create")
</p>
<table id="mitabla" class="display table">
    <thead>
        <tr>
            <th>
                Codigo
                @*@Html.DisplayNameFor(model => model.code)*@
            </th>
            <th>
                Nombre
                @*@Html.DisplayNameFor(model => model.name)*@
            </th>
            <th>
                Transaccional
                @*@Html.DisplayNameFor(model => model.transactional)*@
            </th>
            <th>
                Nivel
                @*@Html.DisplayNameFor(model => model.level)*@
            </th>
            <th>
                Mayor
                @*@Html.DisplayNameFor(model => model.major)*@
            </th>
            <th>
                Balance
                @*@Html.DisplayNameFor(model => model.balance)*@
            </th>
            <th>
                Estado
                @*@Html.DisplayNameFor(model => model.state)*@
            </th>
            <th>
                Descripcion
                @*@Html.DisplayNameFor(model => model.account_type.description)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.transactional)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.level)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.major)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.balance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.state)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.account_type.description)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                    @Html.ActionLink("Borrar", "Delete", new { id = item.id })
                </td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    $(document).ready(function () {
        $('#mitabla').dataTable();
    });
</script>
